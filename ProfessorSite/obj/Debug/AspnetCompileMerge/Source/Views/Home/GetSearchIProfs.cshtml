</li><li> 
  
    @Html.Label("translation", "Eιδικοί στη μετάφραση")
      @Html.RadioButtonFor(model => model.IsDyslexia, "true", new { id = "translation" })
     </li></ul>
  
    <button style="visibility:hidden" type="submit">OK</button>
} 
  </div>
          <div class="modal-footer">
