@model ProfessorSite.Models.MyViewModel

@{
    ViewBag.Title = "GetSearchIProfs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/themes/base/bootstrap.min.css" rel="stylesheet" />
<h2>Αναζήτηση δασκάλου για μαθησιακές δυσκολίες</h2>

 <div class="container">
        <div class="row text-center">
            <a href="#" class="btn btn-lg btn-primary" data-toggle="modal" data-target="#basicModal">Επιλογή ειδικότητας</a>
        </div>
        <hr />    
    </div>

    <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
